<?xml version="1.0" encoding="utf-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
           xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides"
           xsi:type="MailApp">
    
    <Id>a742037b-d694-4725-84cd-f6c9f7adcd76</Id>
    <Version>1.0</Version>
    <ProviderName>SCSpartners</ProviderName>
    <DefaultLocale>en-us</DefaultLocale> <!-- ðŸ”¹ Required for Microsoft validation -->
    <DisplayName DefaultValue="Limit Recipients"/>
    <Description DefaultValue="Restricts the number of recipients in To and CC fields."/>

    <IconUrl DefaultValue="https://www.w3schools.com/images/w3schools_logo_512.png"/>
    <HighResolutionIconUrl DefaultValue="https://www.w3schools.com/images/w3schools_logo_512.png"/>
    <SupportUrl DefaultValue="https://www.w3schools.com/about/default.asp"/>

    <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.1">
        <Permissions>ReadWriteMailbox</Permissions> <!-- ðŸ”¹ Moved to correct section -->

        <Hosts>
            <Host xsi:type="MailHost">
                <DesktopFormFactor>
                    <FunctionFile resid="functionFileUrl"/>
                    <!-- Microsoft does not allow ItemSend; switching to MessageRead -->
                    <ExtensionPoint xsi:type="MessageRead">
                        <Action xsi:type="ShowTaskpane">
                            <SourceLocation resid="functionFileUrl"/>
                            <Title resid="residReadTitle"/>
                        </Action>
                    </ExtensionPoint>
                </DesktopFormFactor>
            </Host>
        </Hosts>

        <Resources>
            <bt:Urls>
                <bt:Url id="functionFileUrl" DefaultValue="https://raw.githubusercontent.com/ITSCSpartners/EXTRec/refs/heads/main/function.js"/>
            </bt:Urls>
        </Resources>
    </VersionOverrides>
</OfficeApp>
